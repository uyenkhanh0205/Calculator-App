<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3CF"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="350dp"
        android:layout_height="320dp"
        android:src="@drawable/calculator"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MathWiz"
        android:fontFamily="@font/interbold"
        android:textSize="35dp"
        android:textColor="@color/linecolor"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Efficiently crunch numbers and solve complex equations with our powerful and user-friendly calculator app."
        android:fontFamily="@font/intermedium"
        android:textSize="20dp"
        android:textColor="@color/linecolor"
        android:textAlignment="center"
        android:layout_margin="18dp"/>

    <Button
        android:id="@+id/btnOpenCalculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:padding="10dp"
        android:background="@drawable/bg_gradient"
        android:onClick="openCalculatorApp"
        android:text="Start Now!"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/interbold"
        app:backgroundTint="@null"
        android:layout_marginTop="7dp" />

</LinearLayout>